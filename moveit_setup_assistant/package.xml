<?xml version="1.0"?>
<package format="2">
  <name>moveit_setup_assistant</name>
  <version>0.9.15</version>
  <description>Generates a configuration package that makes it easy to use MoveIt!</description>

  <author email="dave@dav.ee">Dave Coleman</author>

  <maintainer email="dave@dav.ee">Dave Coleman</maintainer>
  <maintainer email="rhaschke@techfak.uni-bielefeld.de">Robert Haschke</maintainer>
  <maintainer email="moveit_releasers@googlegroups.com">MoveIt! Release Team</maintainer>

  <license>BSD</license>

  <url type="website">http://moveit.ros.org</url>
  <url type="bugtracker">https://github.com/ros-planning/moveit/issues</url>
  <url type="repository">https://github.com/ros-planning/moveit</url>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>moveit_core</depend>
  <depend>moveit_ros_planning</depend>
  <depend>moveit_ros_visualization</depend>
  <depend>yaml-cpp</depend>
  <depend>xacro</depend>
  <depend>roscpp</depend>
  <depend>rviz</depend>
  <depend version_gt="0.3.1">srdfdom</depend>
  <depend>urdf</depend>
  <depend version_gte="1.11.2">pluginlib</depend>

  <!-- Optional: Gazebo integration. This is a heavy dependency so is disabled by default -->
  <!-- depend>gazebo_ros</depend -->

  <export>
    <moveit_setup_assistant plugin="${prefix}/plugins/author_information_widget/author_information_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/default_collisions_widget/default_collisions_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/end_effectors_widget/end_effectors_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/configuration_files_widget/configuration_files_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/passive_joints_widget/passive_joints_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/perception_widget/perception_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/planning_groups_widget/planning_groups_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/robot_poses_widget/robot_poses_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/ros_controllers_widget/ros_controllers_widget.xml"/>
    <moveit_setup_assistant plugin="${prefix}/plugins/simulation_widget/simulation_widget.xml"/>  
    <moveit_setup_assistant plugin="${prefix}/plugins/virtual_joints_widget/virtual_joints_widget.xml"/>  
  </export>

  <test_depend>moveit_resources</test_depend>
  <test_depend>rosunit</test_depend>
</package>
